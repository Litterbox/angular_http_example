<div ng-init = "getBooks()">
<h1>Book App</h1>

  <form ng-submit="addBook()">
    <input type="text" ng-model="newBook.title" placeholder="Title" autofocus>
    <input type="text" ng-model="newBook.author" placeholder="Author">
    <input type="text" ng-model="newBook.description" placeholder="Description">
    <button>Add Book</button>
  </form>

  <ul ng-repeat="book in books">
    <p>Book #{{book.id}}
      <li>{{book.title}}</li>
      <li>{{book.author}}</li>
      <li>{{book.description}}</li>
    </p>
      <button ng-click="deleteBook()">Delete</button>
       <!-- <button ng-click="getEditForm()" ng-model ="checked">Edit</button> -->
      <input type="checkbox" ng-click="getEditForm()" ng-model ="checked"><label>Edit</label>

    <form ng-submit="editBook(book)" ng-show = "checked">
      <input type="text" ng-model="book.title" placeholder="Title">
      <input type="text" ng-model="book.author" placeholder="Author">
      <input type="text" ng-model="book.description" placeholder="Description">
      <button>Edit Book</button>
    </form>

  </ul>
</div>