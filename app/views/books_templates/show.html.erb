<!-- books_templates/show -->

Title: {{book.title}}
<br>
Author: {{book.author}}
<br>
Description: {{book.description}}
<br>
<input type="checkbox" ng-model="checked" id ="checkbox"><label for="checkbox">Edit</label>
<form action="javascript:void(0);" ng-submit = "editBook()" ng-show ="checked">
	<label for="title">Title:</label>
	<input type="text" ng-model ="new_title" id="title">
	<label for="author">Author:</label>
	<input type="text" ng-model ="new_author" id="author">
	<label for="Desc">Desc:</label>
	<input type="text" ng-model ="new_description" id="Desc">
	<input type="submit" value="Submit change">
</form>

